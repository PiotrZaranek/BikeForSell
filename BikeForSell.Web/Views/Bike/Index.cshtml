@model BikeForSell.Application.ViewModels.BikeVm.ListBikeForListVm

@{
    ViewData["Title"] = "Wyszukaj";
}

<h3 class="text-center mt-4">Szukaj</h3>

<div class="row mb-3 mt-3">
    <form method="post" id="filter">
        <div class="row">
            <div class="col-lg-5 mb-2">
                <input asp-for="SearchString" type="text" class="form-control form-control-lg" placeholder="Nazwa" />
            </div>
            <div class="col-lg-1 mb-2 p-2 text-center">
                <h5>Cena</h5>
            </div>
            <div class="col-lg-3 mb-2">
                <input asp-for="PrizeFrom" type="number" class="form-control form-control-lg" />
            </div>
            <div class="col-lg-3 mb-2">
                <input asp-for="PrizeTo" type="number" class="form-control form-control-lg" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5 mb-2">
                <select asp-for="Type" class="form-control form-control-lg">
                    <option value="">Rodzaj</option>
                    <option>XC</option>
                    <option>Trail</option>
                    <option>Enduro</option>
                    <option>DownHill</option>
                    <option>Szosowy</option>
                    <option>Gravel</option>
                    <option>Fitness</option>
                    <option>Przełaj</option>
                    <option>Triathlon</option>
                    <option>Trekking</option>
                    <option>Cross</option>
                    <option>Miejski</option>
                    <option>FatBike</option>
                    <option>BMX</option>
                    <option>Dirt/Street</option>
                    <option>Trial</option>
                </select>
            </div>
            <div class="col-lg-5 mb-2">
                <select asp-for="Filter" class="form-control form-control-lg">
                    <option value="0">Wybierz filtr</option>
                    <option value="1">Najtańsze</option>
                    <option value="2">Najdroższe</option>
                    <option value="3">Najnowsze</option>
                </select>
            </div>
            <div class="col-lg-2 mb-2">
                <input type="submit" value="Zastosuj" class="w-100 btn btn-lg btn-primary" />
            </div>
        </div>
    </form>
</div>

<h3 class="text-center">Wynik:</h3>

<div class="row mt-3">
    @if(Model.Size == 0)
    {
        <p class="text-center display-6 text-secondary">
            Brak wyników...
        </p>
    }
    else
    {
        @foreach (var item in Model.Bikes)
        {
            <div class="row w-100 col-lg-12 p-4 mb-4 shadow rounded m-auto effect">
                <h1>
                    @Html.DisplayFor(modelItem => item.Name)
                </h1>
                <hr />
                <h4>
                    <span class="fw-light">Typ:</span> @Html.DisplayFor(modelItem => item.Type)
                </h4>
                <h5>
                    <span class="fw-light">Rozmiar:</span> @Html.DisplayFor(modelItem => item.Size)
                </h5>
                <div class="row">
                    <div class="col-lg-6 pt-3">
                        <h5>
                            <span class="fw-light">Cena:</span> @Html.DisplayFor(modelItem => item.Prize) zł
                        </h5>
                    </div>
                    <div class="col-lg-6 text-end">
                        <a asp-action="DetailsForIndex" class="btn btn-lg btn-primary" asp-route-id="@item.Id">Zobacz Szczegóły</a>
                    </div>
                </div>
            </div>
        }
    }
    
</div>

<style>
    .effect 
    {
        transition: transform 0.5s, background-color 0.5s;
    }

    .effect:hover 
    {
        transform: scale(105%);
        background-color: #ddeeff;
    }
</style>
