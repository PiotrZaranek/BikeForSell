@model BikeForSell.Application.ViewModels.ProfileVm.EditDetalInformationVm

@{
    ViewData["Title"] = "EditDetalInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-end">
    <a asp-action="Index" class="btn btn-lg btn-dark">Wróć</a>
</div>

<h1 class="text-center mb-4">Edytuj Profil</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4 shadow rounded p-4">
        <form asp-action="EditDetalInformation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <input asp-for="FirsName" class="form-control form-control-lg mb-3" placeholder="Imię" />
                <span asp-validation-for="FirsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control form-control-lg mb-3" placeholder="Nazwisko" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control form-control-lg mb-3" placeholder="Numer tel." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Zapisz" class="btn btn-lg btn-success" />
            </div>
        </form>
    </div>
    <div class="text-center mt-4">
        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-lg btn-secondary shadow">Edytuj Hasło</a>
    </div>
</div>

