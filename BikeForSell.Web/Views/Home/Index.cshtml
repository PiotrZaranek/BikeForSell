@using Microsoft.AspNetCore.Identity;
@using BikeForSell.Domain.Models;
@inject SignInManager<ApplicationUser> signInManager;

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pl">
    <head>
        <title>@ViewData["Title"] - OtoRower</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/BikeForSell.Web.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="text-center mt-5">
            <h1 class="display-5">Witamy w OtoRower!</h1>
            <p class="fs-5">W największym portalu do sprzedaży nowych i używanych rowerów</p>
        </div>
        <div class="row mt-5 d-flex justify-content-center">
            <div class="col-lg-2 shadow rounded p-3">
                <p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="w-100 btn btn-lg btn-success mt-3">Zaloguj się</a>
                </p>
                <p>
                    <a asp-area="Identity" asp-page="/Account/Register" class="w-100 btn btn-lg btn-primary">Załóż konto</a>
                </p>                
            </div>
        </div>
    </body>
</html>
